@model QWI.Models.dbmodels.products

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>products</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="productcategoryid" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.productcategoryid, (IEnumerable<SelectListItem>)ViewData["procat"], new { @class = "form-control" })
        
                        </div>
        </div>
        <div class="form-group">
            <label asp-for="productname" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="productname" class="form-control" />
                <span asp-validation-for="productname" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="producttypeid" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.producttypeid, (IEnumerable<SelectListItem>)ViewData["protype"], new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="size" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="size" class="form-control" />
                <span asp-validation-for="size" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@Html.DropDownListFor(model => model.productcategoryid, (IEnumerable<SelectListItem>)ViewData["procat"], new { @class = "apex-select-list" })
@ViewBag.protype
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
